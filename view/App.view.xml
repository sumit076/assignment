<mvc:View controllerName="sap.ui.demo.walkthrough.controller.App" height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	>
	<App>
		<Page title="Customers"
			class="custom-page-style" 
			showNavButton="false">
			<subHeader>
				<Toolbar>
					<SearchField id="searchField" width="50%" liveChange="onSearch"/>
					<ToolbarSpacer />
					<Button
    					text="Refresh"
    					type="Emphasized"
    					icon="sap-icon://synchronize"
    					press=".onRefresh" 
					/>
					<Button
    					text="Add"
    					type="Emphasized"
    					icon="sap-icon://add"
    					press=".onOpenDialog" 
					/>
					
				</Toolbar>
			</subHeader>
			<content>
			<ScrollContainer
		height="50%"
		width="100%"
		vertical="true">
				<List 
					id="searchResultList" 
					headerText="Customer List({/customer_data/length})"
					backgroundDesign="Solid" 
					type="Navigation" 
					noDataText="No customer found!"
					items="{path: '/customer_data'}"
					>
					<items>
						
						<CustomListItem class="sapUiSmallMarginTop"> 
							<l:Grid defaultSpan="L12 M12 S12">
								<l:content>
									<VBox class="sapUiSmallMarginTop"> 
										<Link text="{id}" press=".onListItemPress" />
										<layoutData>
											<l:GridData span="L4 M4 S4" />
										</layoutData>
									</VBox>

									<VBox class="sapUiSmallMarginTop"> 
										
										<ObjectStatus
											state="{
														path: 'payment_status',
														formatter: '.paymentStatusColorFormatter'
													}"
											text="{
														path: 'payment_status',
														formatter: '.paymentStatusTextFormatter'
													}"
											inverted="true" />
										<layoutData>
											<l:GridData span="L4 M4 S7" />
										</layoutData>
									</VBox>
									


									<VBox alignItems="End" class="sapUiLargeMarginEnd"> 
										<core:Icon src="sap-icon://favorite"
											color="{
														path: 'category',
														formatter: '.colorFormatter'
													}">
											<core:layoutData>
												<FlexItemData growFactor="1" />
											</core:layoutData>
										</core:Icon>
										<layoutData>
											<l:GridData span="L4 M4 S1" />
										</layoutData>
									</VBox>

								</l:content>
							</l:Grid>
						</CustomListItem>
					</items>
				</List>
				</ScrollContainer>
		<f:Form
			editable="true"
			ariaLabelledBy="TitleDetail"
			class="custom-form-style" 
			>
			<f:toolbar>
				<Toolbar id="TDT">
					<Title id="TitleDetailT" text="Details"/>
					<ToolbarSpacer />
					<Button icon="sap-icon://information"/>
				</Toolbar>
			</f:toolbar>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="3"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="4"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
				<f:FormContainer ariaLabelledBy="TitleDetail2">
					
					<f:formElements>
						<f:FormElement label="Name">
							<f:fields>
								<Text text="{/customer_detail/name}" />
							</f:fields>
						</f:FormElement>
						
                        <f:FormElement label="Email">
							<f:fields>
								<Text text="{/customer_detail/email}" />
							</f:fields>
						</f:FormElement>

                        <f:FormElement label="Phone number">
							<f:fields>
								<Text text="{/customer_detail/phone_number}" />
							</f:fields>
						</f:FormElement>

                        <f:FormElement label="Address">
							<f:fields>
								<Text text="{/customer_detail/address}" />
							</f:fields>
						</f:FormElement>

                        <f:FormElement label="DOB">
							<f:fields>
								<Text text="{/customer_detail/dob}" />
							</f:fields>
						</f:FormElement>
                        
						<f:FormElement label="Category">
							<Text text="{/customer_detail/category}" />
						</f:FormElement>
                        <f:FormElement label="Payment Status">
							<Text text="{/customer_detail/payment_status}" />
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
		</f:Form>
			</content>
			<footer>
				<OverflowToolbar style="text-align: center;">
					<ToolbarSpacer />
						<Text text="@2023 SAP UI5 Assignment" style="font-weight: bold;" />
					<ToolbarSpacer />
				</OverflowToolbar>
			</footer>
		</Page>
	</App>
</mvc:View>
